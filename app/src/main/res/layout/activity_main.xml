<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="center">

    <!-- Background Image or Color -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/screensaver_background"
        android:contentDescription="@string/screen_saver_background" />

    <!-- Animated Text or Logo -->
    <TextView
        android:id="@+id/tv_screensaver_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/screensaver_text"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layout_marginTop="@dimen/dp20" />

    <!-- Subtle animation or logo icon -->
    <ImageView
        android:id="@+id/iv_screensaver_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/screensaver_logo"
        android:layout_centerInParent="true"
        android:layout_marginBottom="60dp"
        android:layout_below="@id/tv_screensaver_text"
        android:layout_centerHorizontal="true" />

    <!-- Optional Clock Display -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00"
        android:textSize="48sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/iv_screensaver_logo" />

    <!-- Optional moving shape for animation -->
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" />

</RelativeLayout>
